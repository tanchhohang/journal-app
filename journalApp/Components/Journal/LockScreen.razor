@inject ISecurityService SecurityService

<div class="lock-screen">
    <div class="lock-container">
        <h2 class="mb-4">Welcome back, @Username</h2>
        <p class="mb-4">Enter your PIN to unlock</p>
        
        <div class="pin-input-container mb-3">
            <input type="password" 
                   class="form-control text-center pin-input" 
                   @bind="PinInput" 
                   @bind:event="oninput"
                   @onkeyup="HandleKeyUp"
                   placeholder="Enter PIN"
                   maxlength="6" />
        </div>

        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-danger py-2">@ErrorMessage</div>
        }

        <button class="btn btn-dark w-100" @onclick="UnlockApp">Unlock</button>
    </div>
</div>

<style>
    .lock-screen {
        position: fixed;
        top: 0; left: 0; right: 0; bottom: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
        transition: background 0.3s;
    }

    /* Light Theme */
    body.theme-light .lock-screen {
        background: linear-gradient(135deg, #f0f0f0 0%, #e0e0e0 100%);
    }

    body.theme-dark .lock-screen {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    }

    .lock-container {
        padding: 3rem;
        border-radius: 12px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.3);
        width: 100%;
        max-width: 400px;
        transition: background 0.3s, color 0.3s;
    }

    /* Light Theme */
    body.theme-light .lock-container {
        background: #ffffff;
        color: #000000;
    }

    /* Dark Theme */
    body.theme-dark .lock-container {
        background: #2d2d2d;
        color: #ffffff;
    }

    .pin-input {
        font-size: 1.5rem;
        letter-spacing: 0.5rem;
        height: 60px;
        background-color: inherit;
        color: inherit;
        border: 1px solid #6F6F6F;
        border-radius: 8px;
        text-align: center;
    }

</style>

@code {
    private string PinInput { get; set; } = "";
    private string ErrorMessage { get; set; } = "";
    private string Username { get; set; } = "";

    [Parameter]
    public EventCallback OnUnlocked { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Username = await SecurityService.GetUsername();
    }

    private async Task HandleKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await UnlockApp();
        }
    }

    private async Task UnlockApp()
    {
        ErrorMessage = "";

        if (string.IsNullOrWhiteSpace(PinInput))
        {
            ErrorMessage = "Please enter your PIN";
            return;
        }

        var isValid = await SecurityService.ValidatePin(PinInput);

        if (isValid)
        {
            await SecurityService.UnlockApp();
            await OnUnlocked.InvokeAsync();
        }
        else
        {
            ErrorMessage = "Incorrect PIN. Please try again.";
            PinInput = "";
        }
    }
}