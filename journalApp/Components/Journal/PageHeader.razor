@using journalApp.Services
@inject ISecurityService SecurityService
@inject IJSRuntime JS
@inject NavigationManager NavigationManager


<div class="page-header">
    <div class="header-left">
        <h1 class="welcome-text">Welcome Back! @Username</h1>
        <p class="current-date">@DateTime.Now.ToString("dd MMMM, yyyy")</p>
    </div>
    <div class="header-right">
        <StreakDisplay @ref="streakDisplay" />

    </div>

</div>

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding: 1rem 0;
    }

    .header-left {
        flex: 1;
    }

    .header-right {
        display: flex;
        align-items: center;
    }

    .welcome-text {
        font-size: 2rem;
        font-weight: 600;
        color: #000000;
        margin: 0;
    }

    .current-date {
        font-size: 1rem;
        color: #666666;
        margin: 0.25rem 0 0 0;
    }

    body.theme-dark .welcome-text {
        color: #ffffff;
    }

    body.theme-dark .current-date {
        color: #999999;
    }

    .logout-btn {
        margin-left: 1rem;
        font-size: 1.25rem;
        color: #666;
    }

    .logout-btn:hover {
        color: #000;
    }

    body.theme-dark .logout-btn {
        color: #aaa;
    }

    body.theme-dark .logout-btn:hover {
        color: #fff;
    }

</style>

@code {
    private string Username { get; set; } = "User";
    private StreakDisplay? streakDisplay;

    protected override async Task OnInitializedAsync()
    {
        Username = await SecurityService.GetUsername();
    }

    public async Task RefreshStreak()
    {
        if (streakDisplay != null)
        {
            await streakDisplay.RefreshStreak();
        }
    }
    
    private async Task Logout()
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Log out?");
        if (confirmed)
        {
            await SecurityService.LogoutAsync();
        }
    }
}