<div class="d-flex justify-content-between align-items-start mb-2">
    <div>
        <h1 class="display-5 mb-1 fw-bold fs-1">@CurrentDate.ToString("dd MMMM, yyyy")</h1>
        <p class="text-muted">@CurrentDate.ToString("dddd")</p>
    </div>
    <div class="header-right">
        <StreakDisplay @ref="streakDisplay" />

        <button class="btn btn-link logout-btn"
                title="Logout"
                @onclick="Logout">
            <i class="bi bi-box-arrow-right"></i>
        </button>
    </div>

</div>

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding: 1rem 0;
    }

    .header-left {
        flex: 1;
    }

    .header-right {
        display: flex;
        align-items: center;
    }

    .welcome-text {
        font-size: 2rem;
        font-weight: 600;
        color: #000000;
        margin: 0;
    }

    .current-date {
        font-size: 1rem;
        color: #666666;
        margin: 0.25rem 0 0 0;
    }

    body.theme-dark .welcome-text {
        color: #ffffff;
    }

    body.theme-dark .current-date {
        color: #999999;
    }

    .logout-btn {
        margin-left: 1rem;
        font-size: 1.25rem;
        color: #666;
    }

    .logout-btn:hover {
        color: #000;
    }

    body.theme-dark .logout-btn {
        color: #aaa;
    }

    body.theme-dark .logout-btn:hover {
        color: #fff;
    }

</style>

@code {
    private DateTime CurrentDate => DateTime.Now;
    protected override async Task OnInitializedAsync()
    {
        Username = await SecurityService.GetUsername();
    }

    public async Task RefreshStreak()
    {
        if (streakDisplay != null)
        {
            await streakDisplay.RefreshStreak();
        }
    }
    
    private async Task Logout()
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Log out?");
        
        if (confirmed)
        {
            await OnLogout.InvokeAsync();
        }
    }
        if (confirmed)
        {
            await SecurityService.LogoutAsync();
        }
    }
}